        Juan Llanos
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-8  font-bold text-xl">
        <a href="/" class="nav-link text-gray-700 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors hover:border-b-2 hover:border-primary-600 dark:hover:border-primary-400 hover:scale-105">
          Home
        </a>
        <a href="/about" class="nav-link text-gray-700 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors hover:border-b-2 hover:border-primary-600 dark:hover:border-primary-400 hover:scale-105">
          About
        </a>
        <a href="/project" class="nav-link text-gray-700 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors hover:border-b-2 hover:border-primary-600 dark:hover:border-primary-400 hover:scale-105">
          Projects
        </a>
        <a href="/contact" class="nav-link text-gray-700 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors hover:border-b-2 hover:border-primary-600 dark:hover:border-primary-400 hover:scale-105">
          Contact
        </a>
        
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden flex items-center space-x-2">
        <button id="hamburger" aria-label="Toggle menu" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors cursor-pointer">
          <div class="w-6 h-5 flex flex-col justify-between">
            <span class="w-full h-0.5 bg-gray-700 dark:bg-gray-300 transition-all hamburger-bar"></span>
            <span class="w-full h-0.5 bg-gray-700 dark:bg-gray-300 transition-all hamburger-bar"></span>
            <span class="w-full h-0.5 bg-gray-700 dark:bg-gray-300 transition-all hamburger-bar"></span>
          </div>
        </button>
      </div>
