---

import Layout from "../layouts/Layouts.astro";
import Navbar from '../components/NavBar.astro';
interface Project {
  name: string;
  description: string;
  technologies: string[];
  liveUrl?: string;
  technology?: string;
}

const projects: Project[] = [
  {
    name: 'Web de restaurante estatica',
    description: 'Página de restaurante moderna conectada a Turso DB con diseño responsivo',
    technologies: ['Astro', 'Tailwind CSS', 'TypeScript'],
    liveUrl: 'https://lahamacapaisa.netlify.app/',
    technology: 'Astro Tailwindcss typescript'
  },
  {
    name: 'App de clima',
    description: 'Aplicación meteorológica que usa la API de Open-meteo en tiempo real',
    technologies: ['JavaScript', 'API', 'HTML'],
    liveUrl: 'https://juanda1211.github.io/ClimateWeb/',
    technology: 'JavaScript API HTML CSS'
  },
  {
    name: 'Web con informacion de f1',
    description: 'pagina web de f1 relizada para practicar ajustando a diferentes tamaños como celulares,tablets y desktop',
    technologies: ['JavaScript','HTML','React','TailwindCSS'],
    liveUrl: 'https://f1-web-3385c.firebaseapp.com/',
    technology: 'JavaScript, Tailwind React'
  },
  {
    name: 'Calendario de tareas diarias',
    description: 'Aplicación de tareas diarias donde puedes asignarlas a una fecha y marcarlas por prioridad',
    technologies: ['JavaScript', 'HTML','CSS'],
    liveUrl: 'https://juanda1211.github.io/dailyTaskCalendar/',
    technology: 'JavaScript HTML CSS'
  }
];
---
<Layout title="Proyectos — Juan Llanos">
  <nav>
    <Navbar />
  </nav>
  <section id="projects" class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center justify-between mb-6 mt-20 ">
      <h2 class="text-3xl sm:text-4xl font-bold text-primary-600 dark:text-white mb-20 ">
        Algunos proyectos
      </h2>

    </div>

    <div class="grid sm:grid-cols-1 lg:grid-cols-4 gap-8 mb-20">
      {projects.map((project) => (
        <div class=" border border-gray-200 dark:border-none bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl transition-shadow p-6 flex flex-col hover:scale-110 hover:transition-transform ease-in">
          <h3 class="text-xl font-semibold mb-3 text-gray-900 dark:text-gray-100 text-center">
            {project.name}
          </h3>
          
          <p class="text-gray-700 dark:text-white mb-4 grow text-center p-5">
            {project.description}
          </p>

          {project.technologies.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-4 ml-5">
              {project.technologies.map((tech) => (
                <span class="px-2 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-white rounded-full text-sm ">
                  {tech}
                </span>
              ))}
            </div>
          )}

          <div class="flex items-center justify-evenly   mt-auto pt-4 border-t border-gray-200 dark:border-gray-700">
            <div class="flex gap-3 ">
              {project.liveUrl && (
                  <a
                    href={project.liveUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors font-medium"
                    aria-label="View live demo"
                    title="View live demo"
                  >
                    
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 dark:text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M18 13v6a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                      <polyline points="15 3 21 3 21 9" />
                      <line x1="10" y1="14" x2="21" y2="3" />
                    </svg>
                    <span class="dark:text-white">Ver proyecto</span>
                  </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
  </section>
</Layout>

 


